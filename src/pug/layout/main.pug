include ../utils/mixins
block variables

doctype html
html(lang='ru', dir="rtl")
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title #{title}

	body.js-body
		.wrapper
			.shadow-site.js-shadow
			include ./header
			main
				block header-ban
				block breadcrumb
				if h1
					+h1(h1)
				block content
			include ./footer
