extends ../layout/main

block variables
	- var title = 'Training';

block content
	section.choose-step-wrap.bg-grad-blue.last-elem
		.container
			.row
				.col-12
					.choose-step-wrap__content
						h1 להתחלת השאלון אנא בחרו:

						.choose-step.choose-step_white
							-
								var list=[
									{icon:'ic-car', icon_width:'32', icon_height:'23', text:'תרגול רכב', status:'active'},
									{icon:'ic-truck', icon_width:'26', icon_height:'32', text:'תרגול משאית'},
									{icon:'ic-bus', icon_width:'32', icon_height:'29', text:'תרגול אוטובוס'},
									{icon:'ic-bicycle', icon_width:'34', icon_height:'20', text:'תרגול'},
								]

							each item in list
								.choose-step__item(class=item.status?'active':'')
									.choose-step__icon
										+svg(item.icon, item.icon, item.icon_width, item.icon_height)
									.choose-step__text= item.text

	