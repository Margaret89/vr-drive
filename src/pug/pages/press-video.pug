extends ../layout/main

block variables
	- var title = 'Video';

block content
	section.page-header.bg-grad-green
		.container
			.row
				.col-lg-10.offset-lg-1
					h1 מן העיתונות

	section.press-wrap
		.container
			.row
				.col-lg-10.offset-lg-1
					.filter
						.filter__prev.js-filter-prev
							+svg('ic-arrow-left','ic-arrow-left', '9', '16')

						.filter__content.js-filter-content
							.filter__list.js-filter-list
								-
									var list=[
										{text:'טלוויזיה', status:'active'},
										{text:'כתבות'},
									]

								each item in list
									.filter__item.js-filter-item(class=item.status?'active':'')
										a(href="#").filter__link= item.text

							.filter__next.js-filter-next
								+svg('ic-arrow-right','ic-arrow-right', '9', '16')

