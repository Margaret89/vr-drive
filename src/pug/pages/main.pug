								{title:'ראשון לציון', address:"קניון ערי החוף, רח' סחרוב 19", phone:'03-7590222'},
								{title:'עפולה', address:'קניון העמקים', phone:'04-9954070'},
								{title:'כרמיאל', address:'הכבאי 6, מרכז שווקים', phone:'04-6076666'},
								{title:'נוף הגליל', address:'גלבוע 1 ', phone:'072-3934461'},
								{title:'פתח תקווה', address:' ז׳בוטינסקי 10', phone:'03-5026226'},
